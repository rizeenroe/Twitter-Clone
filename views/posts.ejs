<div class="posts">
    <% if (posts.length > 0) { %>
        <ul>
          <% posts.forEach(post => { %>
            <li>
              <strong><%= post.name %> <% if(post.verified) { %>✔️<% } %></strong>
              <p><%= post.message %></p>
              <span>Likes: <%= post.likes %> | Comments: <%= post.comments %></span>
              <span><%= post.createdAt.toLocaleString("en-US", {
                month: "short",  
                day: "2-digit", 
                year: "numeric", 
                hour: "2-digit", 
                minute: "2-digit",
                hour12: true,
                timeZoneName: "short"
                }) %>
              </span>
            </li>
          <% }) %>
        </ul>
    <% } else { %>
        <p>No posts available.</p>
    <% } %>
</div>